<UsersTree
           OnChange="OnChange"
           @bind-Value="@Selection"
           OnItemContextMenu="ItemContextMenu"/>

@code {
    [Inject] public AppState AppState { get; set; } = default!;
    [Inject] public ContextMenuService ContextMenuService { get; set; } = default!;
    [Inject] public NotificationService NotificationService { get; set; } = default!;

    public string Heading => "User Management";
    public int SortOrder => 0;
    public string SectionAlias => Constants.Sections.UsersSection;
    
    private object? Selection { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await DataRefresh();
        AppState.OnUsersChanged += HandleUsersChanged;
    }

    public void Dispose()
    {
        AppState.OnUsersChanged -= HandleUsersChanged;
    }

    private async Task HandleUsersChanged()
    {
        await DataRefresh();
        StateHasChanged();
    }

