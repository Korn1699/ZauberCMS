@using ZauberCMS.Components.Editors.Models
@using TupleExtensions = ZauberCMS.Core.Extensions.TupleExtensions

<SortableList Id="sortable" Items="@Parent.Children" OnUpdate="@SortList" Context="item">
    <SortableItemTemplate>
        <PickerItem Text="@item.Name" />
    </SortableItemTemplate>
</SortableList>

<RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Right" AlignItems="AlignItems.Center" class="rz-mt-3">
    <RadzenButton ButtonType="ButtonType.Submit" ButtonStyle="ButtonStyle.Success" Icon="save" Text="Save" Click="Save"/>
</RadzenStack>

@code {
    [Parameter, EditorRequired] public NavigationItem Parent { get; set; } = default!;
    [CascadingParameter] public IModalService? ModalService { get; set; }
    [CascadingParameter] BlazoredModalInstance NavigationItemEditorModal { get; set; } = default!;
    
    private void SortList((int oldIndex, int newIndex) indices)
    {
        
        TupleExtensions.SortList(indices, Parent.Children);
        StateHasChanged();
    }

    private async Task Save()
    {
        await NavigationItemEditorModal.CloseAsync(ModalResult.Ok(Parent));
    }
}