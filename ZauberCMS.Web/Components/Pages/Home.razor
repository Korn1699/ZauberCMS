@page "/"
@using ZauberCMS.Components.Editors
@using ZauberCMS.Core.Content.Models

<PageTitle>Home</PageTitle>

<ContentEditor Properties="@_contentProperties"/>

@code {

    private readonly List<ContentValue> _contentProperties =
    [
        new ContentValue
        {
            Alias = "Title",
            ComponentType = "ZauberCMS.Components.Editors.TextContentProperty",
            Value = "Initial Title"
        },

        new ContentValue
        {
            Alias = "Description",
            ComponentType = "ZauberCMS.Components.Editors.TextAreaContentProperty",
            Value = "Initial Description"
        }
    ];

}